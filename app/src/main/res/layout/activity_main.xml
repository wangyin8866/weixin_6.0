<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wyman="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wy.weinxin.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal">

        <com.wy.weinxin.ChangeColorWithText
            android:id="@+id/id_indicator_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            wyman:wyman_color="#ff45c01a"
            wyman:wyman_icon="@mipmap/ic_menu_start_conversation"
            wyman:wyman_text="@string/app_name"
            wyman:wyman_text_size="12sp" />

        <com.wy.weinxin.ChangeColorWithText
            android:id="@+id/id_indicator_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            wyman:wyman_color="#ff45c01a"
            wyman:wyman_icon="@mipmap/ic_menu_emoticons"
            wyman:wyman_text="@string/tab_contact"
            wyman:wyman_text_size="12sp" />

        <com.wy.weinxin.ChangeColorWithText
            android:id="@+id/id_indicator_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            wyman:wyman_color="#ff45c01a"
            wyman:wyman_icon="@mipmap/ic_menu_friendslist"
            wyman:wyman_text="@string/tab_found"
            wyman:wyman_text_size="12sp" />

        <com.wy.weinxin.ChangeColorWithText
            android:id="@+id/id_indicator_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            wyman:wyman_color="#ff45c01a"
            wyman:wyman_icon="@mipmap/ic_menu_allfriends"
            wyman:wyman_text="@string/tab_me"
            wyman:wyman_text_size="12sp" />
    </LinearLayout>
</LinearLayout>
